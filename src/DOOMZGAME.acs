	}
	/*
	//NEW
	int boatTid = ActivatorTID();
	
	if (boatTid == 0) {
		boatTid = UniqueTID(SAFE_UNIQUE_TID_MIN, SAFE_UNIQUE_TID_MAX-SAFE_UNIQUE_TID_MIN);
